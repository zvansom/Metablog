<h1><%= article.title %></h1>
<h3>By <a href="/authors/<%=article.author.id%>"><%= article.author.name %></a></h3>


<div>
  <h4>Tags</h4>
  <% if(article.tags && article.tags.length > 0) { %>
    <% article.tags.forEach( t => { %>
      <a href="/tags/<%=t.id%>">#<%=t.name%></a>
    <% }); %>
  <% } else { %>
    <p>No tags yet!</p>
  <% } %>
</div>
<div class="row">
  <div class="col-6">
    <p>
      <%= article.content %>
    </p>
  </div>
</div>

<div>
  <h3>Comments</h3>
  <% article.comments.forEach( c => { %>
    <div>
      <%= c.content %>
    </div>
  <% }); %>
</div>

<div>
  <h3>Comment here</h3>
  <form class="" action="/comments" method="POST">
    <div class="form-group">
      <label for="">Comment:</label>
      <textarea class="form-control" name="content"></textarea>
    </div>
    <div class="form-group">
      <label for="authorId">Author:</label>
      <select class="form-control" name="authorId" required>
        <option value="0">Choose Your Name Below</option>
        <% if (authors) { %>
          <% authors.forEach( a => { %>
            <option value="<%=a.id%>">
              <%= a.name %>
            </option>
          <% }); %>
        <% } %>
      </select>
      <p>
        Not on the list? <a href="/authors/new">Register Here</a>
      </p>
    </div>
    <input type="hidden" name="articleId" value="<%=article.id%>">
    <input type="submit" name="" value="Comment" class="btn btn-outline-primary" />
  </form>
</div>
